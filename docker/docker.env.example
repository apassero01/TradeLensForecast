# Database Configuration
POSTGRES_PASSWORD=postgres
Postgres_HOST=host.docker.internal
Postgres_PASSWORD=postgres

# Redis Configuration
REDIS_HOST=host.docker.internal
REDIS_PORT=6379

# Django Configuration
DJANGO_SETTINGS_MODULE=TradeLens.settings_docker
DEBUG=True
SECRET_KEY=your-secret-key-here

# Django Superuser (optional - for auto-creation)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=admin123
DJANGO_SUPERUSER_EMAIL=admin@example.com

# Migration and Static Files
RUN_MIGRATIONS=true
COLLECT_STATIC=true

# API Keys (add as needed)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Celery Configuration
CELERY_BROKER_URL=redis://host.docker.internal:6379/3
CELERY_RESULT_BACKEND=redis://host.docker.internal:6379/2

# Debug Mode for run.py
DEBUG_MODE=0 